---
import { PERSONAL_INFO } from "../../data/personal";
import Section from "../UI/Section.astro";
import Title from "../UI/Title.astro";
---

<Section id="contact" title="Get in Touch" titleClassName="mb-12">
    <div class="text-center mb-16" data-aos="fade-up">
        <p class="text-2xl md:text-3xl font-light text-white mb-4">
            Interested? <span class="text-[#FFDE21] font-normal"
                >Just drop me a line...</span
            >
        </p>
        <p class="text-xl text-gray-400 font-light">you can find me on :</p>
    </div>

    <!-- Links -->
    <div
        class="flex flex-wrap justify-center gap-8 w-full max-w-5xl"
        data-aos="fade-up"
        data-aos-delay="200"
    >
        <!-- Email -->
        <a
            href="mailto:mohsenraoufi@icloud.com"
            class="group relative flex flex-col items-center justify-center p-8 glass-card rounded-2xl border border-white/5 hover:border-[#FF7F11]/50 transition-all duration-300 hover:-translate-y-2 min-w-[200px] hover:shadow-[0_0_30px_rgba(255,127,17,0.2)]"
        >
            <div
                class="p-4 rounded-full bg-white/5 group-hover:bg-[#FF7F11]/20 transition-colors mb-4"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="text-gray-300 group-hover:text-[#FF7F11] transition-colors"
                >
                    <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                    <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
                </svg>
            </div>
            <span
                class="text-lg font-medium text-gray-300 group-hover:text-white transition-colors"
                >Email</span
            >
        </a>

        <!-- GitHub -->
        <a
            href="https://github.com/mohsen-raoufi"
            target="_blank"
            rel="noopener noreferrer"
            class="group relative flex flex-col items-center justify-center p-8 glass-card rounded-2xl border border-white/5 hover:border-gray-500/50 transition-all duration-300 hover:-translate-y-2 min-w-[200px] hover:shadow-[0_0_30px_rgba(107,114,128,0.2)]"
        >
            <div
                class="p-4 rounded-full bg-white/5 group-hover:bg-gray-500/20 transition-colors mb-4"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="text-gray-300 group-hover:text-white transition-colors"
                >
                    <path
                        d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
                    ></path>
                    <path d="M9 18c-4.51 2-5-2-7-2"></path>
                </svg>
            </div>
            <span
                class="text-lg font-medium text-gray-300 group-hover:text-white transition-colors"
                >GitHub</span
            >
        </a>

        <!-- LinkedIn -->
        <a
            href="https://www.linkedin.com/in/mohsen-raoufi/"
            target="_blank"
            rel="noopener noreferrer"
            class="group relative flex flex-col items-center justify-center p-8 glass-card rounded-2xl border border-white/5 hover:border-[#0077b5]/50 transition-all duration-300 hover:-translate-y-2 min-w-[200px] hover:shadow-[0_0_30px_rgba(0,119,181,0.2)]"
        >
            <div
                class="p-4 rounded-full bg-white/5 group-hover:bg-[#0077b5]/20 transition-colors mb-4"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="text-gray-300 group-hover:text-[#0077b5] transition-colors"
                >
                    <path
                        d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
                    ></path>
                    <rect width="4" height="12" x="2" y="9"></rect>
                    <circle cx="4" cy="4" r="2"></circle>
                </svg>
            </div>
            <span
                class="text-lg font-medium text-gray-300 group-hover:text-white transition-colors"
                >LinkedIn</span
            >
        </a>
    </div>
</Section>

---
import { Icon } from "astro-icon/components";
import LinkButton from "./LinkButton.astro";
import Badge from "../UI/Badge.astro";

interface Props {
    title: string;
    description: string;
    image: string;
    tags: Array<{
        name: string;
        class: string;
        icon: string;
    }>;
    link?: string;
    linkText?: string;
    paper?: string;
    github?: string;
    slug: string;
}

const { image, title, description, tags, link, linkText, paper, github, slug } =
    Astro.props;
---

<article
    class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-16 md:space-y-0 items-center"
    data-aos="fade-up"
>
    <!-- Image Container (Smaller on desktop) -->
    <div class="w-full md:w-2/5">
        <a
            href={`${import.meta.env.BASE_URL}project/${slug}`}
            class="block w-full"
        >
            <div
                class="glass-card relative flex flex-col items-center gap-8 transition duration-500 ease-in-out transform overflow-hidden rounded-2xl group-hover:-translate-y-2 group-hover:shadow-[0_0_30px_rgba(255,222,33,0.3)] hover:border-primary/50"
            >
                <img
                    alt={title}
                    class="object-cover object-top w-full h-auto transition duration-500 md:scale-105 group-hover:scale-110"
                    loading="lazy"
                    src={import.meta.env.BASE_URL.replace(/\/$/, "") + image}
                    transition:name={`project-image-${slug}`}
                />
            </div>
        </a>
    </div>

    <!-- Content Container -->
    <div class="w-full md:w-3/5">
        <h3
            class="text-3xl font-bold text-white mb-4 group-hover:text-primary transition-colors duration-300"
        >
            <a href={`${import.meta.env.BASE_URL}project/${slug}`}>
                {title}
            </a>
        </h3>

        <ul class="flex flex-wrap mb-6 gap-2">
            {
                tags &&
                    tags.map((tag) => (
                        <li>
                            <Badge
                                class:list={[
                                    "flex items-center gap-x-2 text-xs py-1.5 px-3 border-white/5",
                                    tag.class,
                                ]}
                            >
                                <Icon name={tag.icon} class="size-4" />
                                {tag.name}
                            </Badge>
                        </li>
                    ))
            }
        </ul>

        <p
            class="text-lg text-gray-300 mb-8 leading-relaxed font-light"
            set:html={description}
        />

        <footer class="flex items-center justify-start gap-x-4">
            {
                github && (
                    <LinkButton href={github}>
                        <Icon name="lucide:github" class="size-5" />
                        Source Code
                    </LinkButton>
                )
            }
            {
                link && (
                    <LinkButton href={link}>
                        <Icon name="lucide:external-link" class="size-4" />
                        {linkText || "Live Demo"}
                    </LinkButton>
                )
            }
            {
                paper && (
                    <LinkButton href={paper}>
                        <Icon name="lucide:file-text" class="size-4" />
                        Paper
                    </LinkButton>
                )
            }
        </footer>
    </div>
</article>

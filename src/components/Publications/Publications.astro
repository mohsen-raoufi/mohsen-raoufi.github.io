---
import Section from "../UI/Section.astro";
import { PUBLICATIONS } from "../../data/publications";
---

<Section id="publications" title="Selected Publications">
  <div class="flex flex-col gap-6">
    {
      PUBLICATIONS.map((pub, index) => (
        <div
          class="glass-card hover:border-primary/50 transition-all duration-300 rounded-2xl p-6 group"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-4">
            <div class="flex-1">
              <h3 class="text-xl font-bold text-white mb-2 group-hover:text-primary transition-colors">
                <a href={pub.link} target="_blank" rel="noreferrer">
                  {pub.title}
                </a>
              </h3>
              <p class="text-gray-400 mb-1 font-medium">{pub.authors}</p>
              <div class="flex items-center gap-2 text-sm text-gray-500">
                <span class="italic">{pub.journal}</span>
                <span>â€¢</span>
                <span>{pub.year}</span>
              </div>
            </div>

            <a
              href={pub.link}
              target="_blank"
              rel="noreferrer"
              class="self-start px-4 py-2 text-sm bg-white/5 hover:bg-primary hover:text-white rounded-full text-white transition-all flex items-center gap-2 border border-white/5 shadow-lg shadow-[rgba(255,222,33,0.1)]"
            >
              View Paper
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-external-link"
              >
                <>
                  <path d="M15 3h6v6" />
                  <path d="M10 14 21 3" />
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                </>
              </svg>
            </a>
          </div>
        </div>
      ))
    }

    <div class="text-center mt-8">
      <a
        href="https://scholar.google.com/citations?user=P9A5OrEAAAAJ&hl=en"
        target="_blank"
        class="text-secondary hover:text-white underline transition-colors"
      >
        View full list on Google Scholar
      </a>
    </div>
  </div>
</Section>

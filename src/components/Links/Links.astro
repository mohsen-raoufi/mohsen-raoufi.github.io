---
import { Icon } from "astro-icon/components";

interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["flex items-center gap-6 mb-6", className]}>
    <a
        href="https://www.linkedin.com/in/mohsen-raoufi/"
        target="_blank"
        rel="noopener noreferrer"
        class="text-white hover:text-primary transition-all duration-300 hover:scale-110"
        aria-label="LinkedIn"
    >
        <Icon name="lucide:linkedin" class="size-6 md:size-8" />
    </a>

    <a
        href="https://github.com/mohsen-raoufi"
        target="_blank"
        rel="noopener noreferrer"
        class="text-white hover:text-primary transition-all duration-300 hover:scale-110"
        aria-label="GitHub"
    >
        <Icon name="lucide:github" class="size-6 md:size-8" />
    </a>

    <a
        href="mailto:mohsenraoufi@icloud.com"
        class="text-white hover:text-primary transition-all duration-300 hover:scale-110"
        aria-label="Email"
    >
        <Icon name="lucide:mail" class="size-6 md:size-8" />
    </a>
</div>

